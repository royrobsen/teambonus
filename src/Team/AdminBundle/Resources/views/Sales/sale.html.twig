{% extends 'adminbase.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <h1 class="page-header">Auszahlung </h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"> Bearbeiten </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">                            
                                        {{ form_start(form) }}
                                        {{ form_errors(form) }}	
                                            {% for flashMessage in app.session.flashbag.get('notice') %}
                                                <div class="alert alert-info">
                                                    {{ flashMessage }}
                                                </div>                    
                                            {% endfor %}
                                            <h4>Vereinsname</h4>
                                            {{ club.clubName }}
                                            <h4>Team</h4>
                                            {{ team.0.teamName }}<br /><br />
                                            
                                            {{ form_widget(form.save, { 'attr': {'class': 'btn btn-default'}} ) }}
                                        {{ form_end(form) }}
                                    </div>
                                    </div>
                                </div>
                            </div>
                    </div>            
                </div>
            </div>
        </div> 
    </div> 
</div>

{% endblock %}