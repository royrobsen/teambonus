{% extends 'adminbase.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <h1 class="page-header">Verein <small> {{club.clubName}} </small></h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"> Bearbeiten </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-6">                            
                                        {{ form_start(form) }}
                                        {{ form_errors(form) }}	
                                            {% for flashMessage in app.session.flashbag.get('notice') %}
                                                <div class="alert alert-info">
                                                    {{ flashMessage }}
                                                </div>                    
                                            {% endfor %}
                                            <h4>Vereinsname</h4>
                                            {{ form_widget(form.clubName, { 'attr': {'class': 'form-control'}} ) }}
                                            <h4>Vereinslogo</h4>
                                            <img src="/uploads/clubs/{{ club.clubPic }}" />
                                            {{ form_widget(form.attachment) }}<br />
                                            {{ form_widget(form.save, { 'attr': {'class': 'btn btn-default'}} ) }}
                                        {{ form_end(form) }}
                                    </div>
                                    <div class="col-lg-6">
                                        <h4>Teams</h4>
                                        <div class="list-group">
                                            {% for team in teams  %}
                                            <a class="list-group-item" href="/admin/teams/{{team.id}}">{{team.teamName}}</a>
                                            {% endfor %}
                                        </div>
                                    </div>
                                </div>
                            </div>
                    </div>            
                </div>
            </div>
        </div> 
    </div> 
</div>

{% endblock %}