{% extends 'adminbase.html.twig' %}

{% block body %}
<div id="page-wrapper">
    <div class="container-fluid">
        <div class="col-lg-12">
            <h1 class="page-header">Posts</h1>
            <div class="row">
                <div class="col-lg-12">
                    <div class="panel panel-default">
                        <div class="panel-heading"> Neu anlegen </div>
                            <div class="panel-body">
                                <div class="row">
                                    <div class="col-lg-12">                            
                                        {{ form_start(form) }}
                                        {{ form_errors(form) }}	
                                            <h4>Posttitel</h4>
                                            <div class="form-group">
                                            {{ form_widget(form.postTitle, { 'attr': {'class': 'form-control'}} ) }}
                                            </div>
                                            <div class="form-group">
                                            {{ form_widget(form.postContent, { 'attr': {'class': 'form-control redactor'}} ) }}
                                            </div>
                                            <div class="form-group">
                                            {{ form_widget(form.save, { 'attr': {'class': 'btn btn-default'}} ) }}
                                            </div>
                                        {{ form_end(form) }}
                                            <script type="text/javascript">
                                            $(document).ready(function(){
                                                $('.redactor').redactor({
                                                    minHeight: 300
                                                });
                                            });
                                            </script>
                                    </div>
                                </div>
                            </div>
                    </div>            
                </div>
            </div>
        </div> 
    </div> 
</div>
{% endblock %}