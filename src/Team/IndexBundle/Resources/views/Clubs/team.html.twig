{% extends 'base.html.twig' %}
{% block content %}
            <!-- Section Title -->           
            <section class="section-title img-news">
                <div class="overlay-bg"></div>
                <div class="container">
                    <h1>{{team.club.clubName}} - {{team.teamName}}</h1>
                </div>
            </section>
            <!-- End Section Title --> 

            <!-- Section Area - Content Central -->
            <section class="content-info">

                <div class="crumbs">
                    <div class="container">
                        <ul>
                            <li><a href="/">Home</a></li>
                            <li>/</li>
                            <li><a href="/vereine">Vereine</a></li>
                            <li>/</li>
                            <li>{{team.club.clubName}} - {{team.teamName}}</li>
                        </ul>
                    </div>        
                </div>

                <div class="semiboxshadow text-center">
                    <img src="img/img-theme/shp.png" class="img-responsive" alt="">
                </div>

                <!-- Content Central -->
                <div class="container padding-top">
                    <div class="row">
                        
                        <!-- content Column Left -->
                        <div class="col-md-8">                     
                            <!-- Recent Post -->
                            <div class="panel-box">
                            
                                <div class="titles">
                                    <h4>{{team.club.clubName}} - {{team.teamName}}</h4>
                                </div>
                                <div class="post-item">
                                    <div class="row">
                                        <div class="col-md-12">
                                            <h4>Bisher gesammelt:</h4>
                                            <div class="progress">
                                                <div class="progress-bar" role="progressbar" aria-valuenow="60" aria-valuemin="0" aria-valuemax="100" style="max-width: 100%; width: {{progress.0.sumValue}}%;">
                                                    {{ (progress.0.sumValue/2) | number_format(2, '.', ',') }} €
                                                </div>
                                            </div>
                                        </div>
                                        <div class="col-md-12">
                                            <h4>Über das Team:</h4>
                                            <p>{{team.aboutTeam}}</p>
                                        </div>
                                 <!-- End Post Item -->
                                    </div>
                                </div>
                            </div>  
                            <!-- End Recent Post --> 


                        </div>
                         <!-- End content Left -->            
                        <!-- content Sidebar Center -->
                        <aside class="col-md-4">                     

                            <!-- Widget Text-->
                            <div class="panel-box">
                                <div class="titles">
                                    <h4>Vereinswappen</h4>
                                </div>
                                <div class="row">
                                    <div class="img-hover clubimage">
                                        <img class="clubimg" src="/uploads/clubs/{{team.club.clubPic}}" alt="" style="object-fit: contain; width: 150px;"class="img-responsive">
                                    </div>
                                    <form action="/add/{{team.id}}">
                                        {% if (app.request.cookies.has('teambonus') == false or app.request.cookies.get('teambonus') != team.id) %}
                                        <button ng-click="saveData()" type="submit" class="btn btn-success" style="width: 100%;">Bonus für dieses Team sammeln</button>
                                        {% endif %}
                                        {% if app.request.cookies.get('teambonus') == team.id %}
                                        <button class="btn btn-info disabled" style="width: 100%;">Du sammelst für dieses Team</button>
                                        {% endif %}
                                    </form>
                                </div>
                            </div>  
                            <!-- End Widget Text-->
                        </aside>
                        <!-- End content Sidebar Center -->
                    </div>                     
                </div>  
                <!-- End Content Central -->
{% endblock %}